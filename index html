    <script>
        // Tạo hiệu ứng mưa
        function createRain() {
            const rainContainer = document.getElementById('rain');
            const dropCount = 100;
            
            for (let i = 0; i < dropCount; i++) {
                const drop = document.createElement('div');
                drop.classList.add('drop');
                
                // Vị trí ngẫu nhiên
                const left = Math.random() * 100;
                const animationDuration = 1 + Math.random() * 2;
                const animationDelay = Math.random() * 2;
                
                drop.style.left = `${left}%`;
                drop.style.animationDuration = `${animationDuration}s`;
                drop.style.animationDelay = `${animationDelay}s`;
                
                rainContainer.appendChild(drop);
            }
        }

        // Mô phỏng kiểm tra tải
        let testInterval;
        let requestCount = 0;
        let isTesting = false;

        function startLoadTest() {
            if (isTesting) return;
            
            isTesting = true;
            requestCount = 0;
            
            testInterval = setInterval(() => {
                // Tăng số lượng yêu cầu
                requestCount += Math.floor(Math.random() * 10) + 1;
                document.getElementById('requestCount').textContent = requestCount;
                
                // Cập nhật thời gian phản hồi (giả lập)
                const responseTime = Math.max(10, Math.floor(1000 / (requestCount / 10 + 1)));
                document.getElementById('responseTime').textContent = `${responseTime}ms`;
                
                // Cập nhật trạng thái máy chủ
                let serverStatus = "Bình thường";
                let loadLevel = "Thấp";
                
                if (requestCount > 50) {
                    serverStatus = "Quá tải";
                    loadLevel = "Cao";
                    document.getElementById('serverStatus').style.color = "#ff5555";
                    document.getElementById('loadLevel').style.color = "#ff5555";
                } else if (requestCount > 10) {
                    serverStatus = "Ổn định";
                    loadLevel = "Trung bình";
                    document.getElementById('serverStatus').style.color = "#ffaa00";
                    document.getElementById('loadLevel').style.color = "#ffaa00";
                } else {
                    document.getElementById('serverStatus').style.color = "#00ffaa";
                    document.getElementById('loadLevel').style.color = "#00ffaa";
                }
                
                document.getElementById('serverStatus').textContent = serverStatus;
                document.getElementById('loadLevel').textContent = loadLevel;
                
            }, 1000);
        }

        function stopLoadTest() {
            clearInterval(testInterval);
            isTesting = false;
            
            // Reset các giá trị
            document.getElementById('requestCount').textContent = "0";
            document.getElementById('serverStatus').textContent = "Bình thường";
            document.getElementById('serverStatus').style.color = "#00ffaa";
            document.getElementById('responseTime').textContent = "0ms";
            document.getElementById('loadLevel').textContent = "Thấp";
            document.getElementById('loadLevel').style.color = "#00ffaa";
        }

        // Xử lý trình phát nhạc
        const audioPlayer = new Audio();
        let currentSong = null;
        
        function setupMusicPlayer() {
            const songItems = document.querySelectorAll('.song-item');
            
            songItems.forEach(item => {
                item.addEventListener('click', function() {
                    // Xóa active khỏi tất cả các bài hát
                    songItems.forEach(song => song.classList.remove('active'));
                    
                    // Thêm active cho bài hát được chọn
                    this.classList.add('active');
                    
                    // Lấy URL bài hát
                    const songSrc = this.getAttribute('data-src');
                    
                    // Phát nhạc (trong thực tế, bạn cần thay thế bằng URL thật)
                    // audioPlayer.src = songSrc;
                    // audioPlayer.play();
                    
                    // Hiển thị thông báo (vì URL là giả)
                    alert("Trong phiên bản thực tế, bài hát sẽ được phát. URL hiện tại là giả lập.");
                });
            });
            
            // Cập nhật thanh tiến trình (giả lập)
            setInterval(() => {
                if (audioPlayer.src && !audioPlayer.paused) {
                    const progress = (audioPlayer.currentTime / audioPlayer.duration) * 100;
                    document.getElementById('songProgress').style.width = `${progress}%`;
                }
            }, 100);
        }

        // Khởi tạo khi trang được tải
        document.addEventListener('DOMContentLoaded', function() {
            createRain();
            setupMusicPlayer();
            
            // Gán sự kiện cho các nút
            document.getElementById('startTest').addEventListener('click', startLoadTest);
            document.getElementById('stopTest').addEventListener('click', stopLoadTest);
        });
    </script>
</body>
