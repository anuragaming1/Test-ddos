                <div class="controls">
                    <button class="btn btn-primary" id="startTest">Bắt Đầu Kiểm Tra</button>
                    <button class="btn btn-danger" id="stopTest">Dừng Kiểm Tra</button>
                </div>

                <div class="stats">
                    <div class="stat-box">
                        <div class="stat-value" id="requestCount">0</div>
